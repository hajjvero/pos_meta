<div class="tab-pane fade" id="company" role="tabpanel">
    <div class="card">
        <div class="card-body">
            <table class="table table-borderless settings-table">
                <tbody>
                {% if has_setting('company_name') %}
                    <tr>
                        <th class="settings-label">
                            <label for="company_name">{{ "Company Name"|trans }}</label>
                        </th>
                        <td class="settings-input">
                            <input name="company_name" type="text" id="company_name"
                                   value="{{ get_setting('company_name') }}" class="form-control">
                            <div class="form-text">{{ "The name of your business or organization."|trans }}</div>
                        </td>
                    </tr>
                {% endif %}

                {% if has_setting('company_email') %}
                    <tr>
                        <th class="settings-label">
                            <label for="company_email">{{ "Company Email"|trans }}</label>
                        </th>
                        <td class="settings-input">
                            <input name="company_email" type="email" id="company_email"
                                   value="{{ get_setting('company_email') }}" class="form-control">
                            <div class="form-text">{{ "The main contact email for your business."|trans }}</div>
                        </td>
                    </tr>
                {% endif %}

                {% if has_setting('company_phone') %}
                    <tr>
                        <th class="settings-label">
                            <label for="company_phone">{{ "Company Phone"|trans }}</label>
                        </th>
                        <td class="settings-input">
                            <input name="company_phone" type="text" id="company_phone"
                                   value="{{ get_setting('company_phone') }}" class="form-control">
                            <div class="form-text">{{ "The main contact phone number for your business."|trans }}</div>
                        </td>
                    </tr>
                {% endif %}

                {% if has_setting('company_website') %}
                    <tr>
                        <th class="settings-label">
                            <label for="company_fax">{{ "Company Fax"|trans }}</label>
                        </th>
                        <td class="settings-input">
                            <input name="company_fax" type="text" id="company_fax"
                                   value="{{ get_setting('company_fax') }}" class="form-control">
                            <div class="form-text">{{ "The fax number for your business (optional)."|trans }}</div>
                        </td>
                    </tr>
                {% endif %}

                {% if has_setting('company_address') %}
                    <tr>
                        <th class="settings-label">
                            <label for="company_address">{{ "Company Address"|trans }}</label>
                        </th>
                        <td class="settings-input">
                            <textarea name="company_address" id="company_address" rows="3"
                                      class="form-control">{{ get_setting('company_address') }}</textarea>
                            <div class="form-text">{{ "The physical address of your business."|trans }}</div>
                        </td>
                    </tr>
                {% endif %}

                {% if has_setting('company_logo') or has_setting('company_logo_dark') %}
                    <tr>
                        <th class="settings-label">{{ "Company Logo"|trans }}</th>
                        <td class="settings-input">
                            {% if has_setting('company_logo') %}
                                <div class="mb-3">
                                    <label for="company_logo" class="form-label">{{ "Logo"|trans }}</label>
                                    <input name="company_logo" type="text" id="company_logo"
                                           value="{{ get_setting('company_logo') }}" class="form-control"
                                           placeholder="{{ "Logo URL"|trans }}">
                                    <div class="form-text">{{ "URL or path to your company logo."|trans }}</div>
                                </div>
                            {% endif %}

                            {% if has_setting('company_logo_dark') %}
                                <div class="mb-3">
                                    <label for="company_logo_dark"
                                           class="form-label">{{ "Dark Mode Logo"|trans }}</label>
                                    <input name="company_logo_dark" type="text" id="company_logo_dark"
                                           value="{{ get_setting('company_logo_dark') }}" class="form-control"
                                           placeholder="{{ "Dark logo URL"|trans }}">
                                    <div
                                        class="form-text">{{ "Alternative logo for dark theme (optional)."|trans }}</div>
                                </div>
                            {% endif %}
                        </td>
                    </tr>
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>
</div>
